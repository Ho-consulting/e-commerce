
    {{ form_start(form) }}

        <div class="row form-group ">
            <div class="w-50">
                {{ form_row(form.firstName) }}
            </div>

            <div class="w-50">
                {{ form_row(form.lastName) }}
            </div>
        </div>

        <div class="row form-group ">
            {{ form_row(form.address) }}
        </div>

        <div class="row form-group">
            <div class="w-50">
                {{ form_row(form.postalCode) }}
            </div>

            <div class="w-50">
                {{ form_row(form.town) }}
            </div>
        </div>

        <div class="row form-group ">
            {{ form_row(form.phoneNumber) }}
        </div>

        <button class="btn btn-dark w-100">{{ button_label|default('Enregistrer') }}</button>


