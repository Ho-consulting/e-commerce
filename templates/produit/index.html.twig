{% extends 'layouts/base.html.twig' %}

{% block title %}Produit index{% endblock %}


{% block body %}

    {% if produits|length > 0 %}
        <h1 class="text-center mb-5 text-muted">Tous les produits ({{ pluralize(produits|length,'produit','produits') }})  </h1>
        {% for row in produits|batch(3) %}
            <div class="row">
                {% for produit in row %}
                    <div class="col-md-4 mb-5">
                        <div class="mw-100 overflow-hidden shadow">
                            <article class="bg-white rounded p-3">
                                <a href="{{ path('app_produit_show', {id:produit.id}) }}">
                                    <img class="w-100 rounded-top" style="max-width: 400px;" src="{{ vich_uploader_asset(produit, 'imageFile') }}">
                                </a>
                                <a class="text-center text-muted text-decoration-none" href="{{ path('app_produit_show', {id:produit.id}) }}"><h2 class="pt-3">{{ produit.name }}</h2></a>
                                <p class="text-center text-muted  text-break"> {{ produit.description|u.truncate(35, '.......', false) }} </p>
                                <p class="h5 pb-2 bold text-center"> {{ produit.prix }}â‚¬</p>

