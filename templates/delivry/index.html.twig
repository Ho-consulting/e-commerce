{% extends 'layouts/base.html.twig' %}

{% block title %}Livraisons{% endblock %}

{% block body %}
    <h1>Delivry index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PriceDelivry</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for delivry in delivries %}
            <tr>
                <td>{{ delivry.id }}</td>
                <td>{{ delivry.priceDelivry }}</td>
                <td>
                    <a href="{{ path('app_delivry_show', {'id': delivry.id}) }}">show</a>
                    <a href="{{ path('app_delivry_edit', {'id': delivry.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_delivry_new') }}">Create new</a>
{% endblock %}
