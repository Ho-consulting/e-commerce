{% extends 'layouts/base.html.twig' %}

{% block title %}New Commande{% endblock %}

{% block body %}

    <h1 class="text-center">Validation de votre commande</h1>

    
        <div class="progress mt-5 col-md-10 mx-auto" role="progressbar" aria-label="Animated striped example" aria-valuenow="37" aria-valuemin="0" aria-valuemax="100">
            <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 37%"></div>
        </div>

        <div class="mt-3 row col-lg-10 mx-auto">
            <div class="col-lg-3">
                <b>Utilisateur connect√©</b>
                <p></p>
            </div>

            <div class="col-lg-3 text-center">
                <b>Adresse</b>
            </div>

            <div class="col-lg-3 text-center">
                <b>Paiement</b>
            </div>

            <div class="col-lg-3 text-end">
                <b>C'est fait</b>
            </div>
        </div>
    
    <div class="row mt-3 mx-auto">
        <div class="col-lg-6 p-5">
            {% if adress != null %}
                <b>ADRESSE DE LIVRAISON</b><br>
                <div class="border-top pt-3">
                    <a class="btn btn-dark float-end" href="{{ path('app_adresse_edit', {'id': adress.id}) }}">Modifier</a>
                    <p>{{ adress.firstName }} {{ adress.lastName }}<br>
                    {{ adress.address }}<br>
                    {{ adress.postalCode }}<br> 
                    {{ adress.town }}<br>
                    {{ adress.phoneNumber }}
                    </p>
                </div>
            {% else %}
                <p class="h3">Aucune adresse</p>
                <a href="{{ path('app_adresse_new') }}">Ajouter une adresse</a>
            {% endif %}
        </div>

        <div class="col-lg-6 p-5">
            <a href="#" class="btn btn-outline-dark w-100">Continuer</a>
        </div>
    </div>


{% endblock %}