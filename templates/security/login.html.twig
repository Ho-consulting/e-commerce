{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="col-lg-7 mx-auto">
        <h1 class="mt-5 mb-4 font-weight-normal bold"><b>Connexion</b></h1>
        
        <div class="form-group mb-3">
            <input placeholder="Email" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>

        <div class="form-group mb-3">     
            <input placeholder="Mot de passe" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
        
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <div class="d-flex justify-content-between form-group mb-3 mt-3">
            <div class="checkbox">
                <input type="checkbox" name="_remember_me">
                <label for="_remember_me" class="font-secondary">
                    Garder ma session active
                </label>
            </div>
            <div class="text-right">
                <a class="text-decoration-none font-secondary-bold" href="{{ path('app_forgot_password_request') }}"> Mot de passe oubli√© ? </a>
            </div>
        </div>

        <button class="btn w-100 btn-dark" type="submit">Se connecter</button>
        <p class="text-center font-secondary mt-5">Pas encore de compte ?<a style="text-decoration: none;" href="{{ path('app_register') }}" class="font-bold"> S'inscrire</a></p>
    </div>
</form>

{% endblock %}
