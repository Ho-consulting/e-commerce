{{ form_start(form) }}
    
        <div class="row mx-auto text-center col-md-6 mt-3">

            <div class="row mb-3">
                <label for="stars">Donnez une note</label>
                <div class="stars" name="stars">
                    <i class="lar la-star" id="la-star" data-value="1"></i>
                    <i class="lar la-star" data-value="2"></i>
                    <i class="lar la-star" data-value="3"></i>
                    <i class="lar la-star" data-value="4"></i>
                    <i class="lar la-star" data-value="5"></i>
                </div>

                   {{ form_row(form.rating, {
                        name: 'note',
                        id: 'note',
                        value: '0',
                        required: true,
                        class: 'hidden-row' })  
                    }}
            </div>

            <div class="row mb-3">
                {{ form_row(form.comment, {
                    required: true
                }) }}
            </div>
        </div>
        
        <div class="mx-auto text-center">
            <button class="btn btn_primary_dark  mb-3 ">{{ button_label|default('Soumettre mon avis') }}</button>
        </div>

        {{ form_end(form) }}


{% block javascripts %}
    {{ encore_entry_script_tags('rating') }}
{% endblock %}