{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ panier.id }}</td>
            </tr>
        </tbody>
    </table>

    <h1>Articles présents</h1>

    {% for article in panier.getArticlesPanier %}
        {% if article.getProduit.isAvailible %}

        <table class="table">
            <tbody>
                <tr>
                    <th>produits</th>
                    <td>{{ article.getProduit.getName}}</td>
                </tr>
                <tr>
                    <th>Quantité</th>
                    <td>{{ article.quantity}}</td>
                </tr>
            </tbody>
        </table>
        {% endif %}

    {% endfor %}

    {{ form_start(form) }}
            {{ form_widget(form) }}
             <button class="btn btn-primary">{{ button_label|default('Passer la commande') }}</button> 
        {{ form_end(form) }}


    <a href="{{ path('app_panier_index') }}">back to list</a>

    <a href="{{ path('app_panier_edit', {'id': panier.id}) }}">edit</a>

    {{ include('panier/_delete_form.html.twig') }}
{% endblock %}
