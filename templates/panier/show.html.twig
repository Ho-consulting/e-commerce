{% extends 'layouts/base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    
    <h2 class="text-muted mb-5">Mon panier ({{ pluralize(panier.getArticlesPanier|length,'Article','Articles') }})</h2>


    <div class="row">

        <div class="col-md-6 p-3">
            {% for article in panier.getArticlesPanier %}
                {% if article.getProduit.isAvailible %}
                    <div class="row">
                        <div class="col-lg-3 p-3">
                            <img class="img-fluid" src="{{ vich_uploader_asset(article.getProduit, 'imageFile') }}" alt="image_produit" width="100%" height="100%">
                        </div>

                        <div class="col-lg-6 p-3">
                            <p class="text-muted h6"><b>{{ article.getProduit.getName }}</b></p>
                            <p class="bold text-muted h6">Quantité: {{ article.quantity }}</p>
                        </div>

                        <div class="col-lg-3 p-3">
                            <p class="h3 bold text-muted mb-5 text-end">{{ article.getProduit.getPrix }}€</p> 
                            <button class="btn btn-outline-danger w-100">Supprimer<i class="fas fa-trash-alt"></i></button>
                        </div>
                    </div>
                    <hr>

                {% endif %}
            {% endfor %}
        </div>

        <div class="col-md-1"></div>

        <div class="col-md-5 p-3">
            <div class="row">
                <h3 class="text-muted text-end mb-5">Résumé de la commande</h3>
                <div class="col-lg-8">
                    <p class="text-muted h5">{{ pluralize(panier.getArticlesPanier|length,'Article','Articles') }}</p>
                </div>
                <div class="col-lg-4">
                    <p class="text-muted h5 text-end">{{ panier.getTotalPanier }}€</p>
                </div>
                <hr>
                <div class="col-lg-8">
                    <p class="text-muted h5">Livraison</p>
                </div>
                <div class="col-lg-4">
                    <p class="text-muted h5 text-end">€</p>
                </div>
                <hr>
                <div class="col-lg-8">
                    <p class="text-muted h5">Total</p>
                </div>
                <div class="col-lg-4">
                    <p class="text-muted h5 text-end">€</p>
                </div>
            </div>
        </div>
    </div>

    


        {{ form_start(form) }}
            {{ form_widget(form) }}
             <button class="btn btn-primary">{{ button_label|default('Passer la commande') }}</button> 
        {{ form_end(form) }}


